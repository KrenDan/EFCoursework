<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EFCoursework.WPF.Styles">
    <SolidColorBrush x:Key="DarkBrush1" Color="{StaticResource DarkColor1}"/>
    <SolidColorBrush x:Key="DarkBrush2" Color="{StaticResource DarkColor2}"/>
    <SolidColorBrush x:Key="DarkBrush3" Color="{StaticResource DarkColor3}"/>
    <SolidColorBrush x:Key="LightBrush1" Color="{StaticResource LightColor1}"/>
    <SolidColorBrush x:Key="LightBrush2" Color="{StaticResource LightColor2}"/>
    <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource DarkColor2}" Offset="0"></GradientStop>
        <GradientStop Color="{StaticResource DarkColor3}" Offset="0.9"></GradientStop>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="InvertedMainBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource DarkColor3}" Offset="0"></GradientStop>
        <GradientStop Color="{StaticResource DarkColor2}" Offset="0.9"></GradientStop>
    </LinearGradientBrush>
</ResourceDictionary>