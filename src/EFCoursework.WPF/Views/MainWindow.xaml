<Window x:Class="EFCoursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFCoursework"
        xmlns:inf="clr-namespace:EFCoursework.WPF.Infrastructure"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=Game}"
        Title="MainWindow" Height="450" Width="800"
        Background="DimGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Margin="5">
            <DataGrid Name="gamesDataGrid" IsReadOnly="True">

            </DataGrid>
        </ScrollViewer>
    </Grid>
</Window>
